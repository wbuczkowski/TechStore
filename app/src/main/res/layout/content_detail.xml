<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".DetailActivity"
    tools:showIn="@layout/activity_detail">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        tools:text="Title" />

    <LinearLayout
        android:id="@+id/layoutWorkOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textWorkOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:labelFor="@id/editWorkOrder"
            android:text="@string/text_work_order" />

        <EditText
            android:id="@+id/editWorkOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_work_order"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            tools:targetApi="o" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCostCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textCostCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:labelFor="@id/editCostCenter"
            android:text="@string/text_cost_center" />

        <EditText
            android:id="@+id/editCostCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_cost_center"
            android:importantForAutofill="no"
            android:inputType="textCapCharacters"
            tools:targetApi="o" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutInventory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textInventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:labelFor="@id/editInventory"
            android:text="@string/text_inventory" />

        <EditText
            android:id="@+id/editInventory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_inventory"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:visibility="visible"
            tools:targetApi="o" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMaterial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textMaterial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:labelFor="@id/editMaterial"
            android:text="@string/text_material" />

        <EditText
            android:id="@+id/editMaterial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_material"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            tools:targetApi="o" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPlant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textPlant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:labelFor="@id/editPlant"
            android:text="@string/text_plant" />

        <EditText
            android:id="@+id/editPlant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/text_plant"
            android:importantForAutofill="no"
            android:inputType="textCapCharacters"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/textStorageLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:labelFor="@id/editStorageLocation"
            android:text="@string/text_storage_location" />

        <EditText
            android:id="@+id/editStorageLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/text_storage_location"
            android:importantForAutofill="no"
            android:inputType="textCapCharacters"
            tools:targetApi="o" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutBin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textBin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:labelFor="@id/editBin"
            android:text="@string/text_bin" />

        <EditText
            android:id="@+id/editBin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_bin"
            android:importantForAutofill="no"
            android:inputType="textCapCharacters"
            tools:targetApi="o" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutVendor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textVendor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:labelFor="@id/editVendor"
            android:text="@string/text_vendor" />

        <EditText
            android:id="@+id/editVendor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_vendor"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            tools:targetApi="o" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:labelFor="@id/editQuantity"
            android:text="@string/text_quantity" />

        <EditText
            android:id="@+id/editQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/text_quantity"
            android:importantForAutofill="no"
            android:inputType="numberDecimal"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:targetApi="o" />
    </LinearLayout>
</LinearLayout>